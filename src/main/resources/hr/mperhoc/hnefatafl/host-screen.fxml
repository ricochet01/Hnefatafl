<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.mperhoc.hnefatafl.controller.HostGameController">
   <children>
      <Label layoutX="245.0" layoutY="210.0" prefHeight="38.0" prefWidth="196.0" text="Local IP address:">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <Label layoutX="401.0" layoutY="48.0" text="Host game">
         <font>
            <Font size="46.0" />
         </font>
      </Label>
      <TextField fx:id="ipAddressTextField" editable="false" layoutX="501.0" layoutY="201.0" prefHeight="29.0" prefWidth="313.0">
         <font>
            <Font size="26.0" />
         </font>
      </TextField>
      <RadioButton fx:id="attackerRadioButton" layoutX="289.0" layoutY="457.0" mnemonicParsing="false" selected="true" text="Attacker">
         <font>
            <Font size="25.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="playSideGroup" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="defenderRadioButton" layoutX="624.0" layoutY="456.0" mnemonicParsing="false" text="Defender" toggleGroup="$playSideGroup">
         <font>
            <Font size="26.0" />
         </font>
      </RadioButton>
      <Label layoutX="470.0" layoutY="407.0" text="Play as:">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <Button fx:id="hostGameButton" layoutX="681.0" layoutY="589.0" mnemonicParsing="false" onAction="#hostGame" text="Host!">
         <font>
            <Font size="26.0" />
         </font>
      </Button>
      <Button fx:id="backButton" layoutX="289.0" layoutY="589.0" mnemonicParsing="false" onAction="#backToMainMenu" text="Back">
         <font>
            <Font size="26.0" />
         </font>
      </Button>
      <Label layoutX="245.0" layoutY="317.0" prefHeight="38.0" prefWidth="222.0" text="Online IP address:">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <TextField fx:id="onlineIpAddressTextField" editable="false" layoutX="501.0" layoutY="308.0" prefHeight="29.0" prefWidth="313.0">
         <font>
            <Font size="26.0" />
         </font>
      </TextField>
   </children>
</AnchorPane>
